{
  "name": "constellator",
  "version": "0.5.0",
  "description": "Turn a repo list into a clean constellation of categories.",
  "type": "module",
  "bin": {
    "constellator": "cli.cjs"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "cli.cjs"
  ],
  "scripts": {
    "build": "bun build index.tsx --outdir dist --target node --minify --sourcemap=external",
    "dev": "bun run index.tsx",
    "prepublishOnly": "bun run build",
    "lint": "bunx eslint .",
    "lint:fix": "bunx eslint . --fix",
    "format": "bunx prettier --write .",
    "format:check": "bunx prettier --check .",
    "type-check": "bunx tsc --noEmit"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mislavjc/constellator.git"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@ai-sdk/gateway": "^1.0.15",
    "@inkjs/ui": "^2.0.0",
    "@types/react": "^19.1.12",
    "ai": "^5.0.28",
    "dotenv": "^17.2.1",
    "effect": "^3.17.9",
    "ink": "^6.2.3",
    "ink-spinner": "^5.0.0",
    "ink-table": "^3.1.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.1.1",
    "slugify": "^1.6.6",
    "zod": "^4.1.5"
  }
}
